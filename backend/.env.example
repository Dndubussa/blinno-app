# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blinno
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development
# For production, use: NODE_ENV=production

# CORS Configuration
# For production, use: https://www.blinno.app
# For local development, use: http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif
MAX_FILE_SIZE=10485760

# Click Pesa Payment Gateway Configuration
# Get these from Click Pesa Dashboard: Settings > Developers
CLICKPESA_CLIENT_ID=your_clickpesa_client_id
CLICKPESA_API_KEY=your_clickpesa_api_key
# For testing, use: https://sandbox.clickpesa.com
# For production, use: https://api.clickpesa.com
CLICKPESA_BASE_URL=https://sandbox.clickpesa.com
# For production, use: https://www.blinno.app
# For local development, use: http://localhost:3001
APP_URL=http://localhost:3001

# Google OAuth (Optional - for future implementation)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
