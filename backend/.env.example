# ============================================
# BLINNO Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# ============================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration (REQUIRED)
# Get from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Resend Email Configuration (REQUIRED for email functionality)
# Get from: Resend Dashboard > API Keys
RESEND_API_KEY=your_resend_api_key_here

# Default email (fallback)
RESEND_FROM_EMAIL=BLINNO <noreply@blinno.app>

# Onboarding emails
RESEND_ONBOARDING_EMAIL=BLINNO <onboarding@blinno.app>

# Support emails
RESEND_SUPPORT_EMAIL=BLINNO Support <support@blinno.app>

# Finance emails
RESEND_FINANCE_EMAIL=BLINNO Finance <finance@blinno.app>

# Order emails
RESEND_ORDERS_EMAIL=BLINNO Orders <orders@blinno.app>

# Security emails
RESEND_SECURITY_EMAIL=BLINNO Security <security@blinno.app>

# Marketing emails
RESEND_MARKETING_EMAIL=BLINNO <marketing@blinno.app>

# System emails
RESEND_SYSTEM_EMAIL=BLINNO <system@blinno.app>

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Click Pesa Payment Gateway (Optional - only if using payments)
CLICKPESA_CLIENT_ID=your_clickpesa_client_id
CLICKPESA_API_KEY=your_clickpesa_api_key
CLICKPESA_BASE_URL=https://sandbox.clickpesa.com

# Application Configuration
APP_URL=http://localhost:5173